<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        style="@style/LoginFormContainer"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="First Name"
                android:id="@+id/textView"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/editfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:text="FirstName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Last Name"
                android:id="@+id/textView8"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/editlastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:text="LastName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Email"
                android:id="@+id/textView9"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:text="Email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Username"
                android:id="@+id/textView10"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/editusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:password="false"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:text="username"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Favorite Game"
                android:id="@+id/textView11"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/favgame"
                android:hint="@string/fav_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Favorite Genre"
                android:id="@+id/textView12"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/favgenre"
                android:hint="@string/fav_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Favorite Console"
                android:id="@+id/textView13"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/console"
                android:hint="@string/console_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ffffff"/>

            <Button
                android:id="@+id/save_user_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@string/save" />

        </LinearLayout>


    </ScrollView>

</FrameLayout>
